<div class="text-center">
    <h4>Number Addition Form</h4>

    <!-- Form to input two numbers and calculate the sum -->
    <form id="additionForm">
        <label for="num1">Enter first number:</label>
        <input type="number" id="num1" name="num1" required><br>

        <label for="num2">Enter second number:</label>
        <input type="number" id="num2" name="num2" required><br>

        <label for="result">Result:</label>
        <output id="result"></output><br>

        <button type="submit">Calculate Sum</button>
    </form>
</div>

@section Scripts {
    <script>
        // JavaScript to handle form submission and calculate sum
        document.getElementById("additionForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Prevent form submission to avoid page refresh

            // Get values from input fields
            var num1 = parseInt(document.getElementById("num1").value);
            var num2 = parseInt(document.getElementById("num2").value);

            // Calculate and display the sum
            var sum = num1 + num2;
            document.getElementById("result").textContent = sum;
        });
    </script>
}
